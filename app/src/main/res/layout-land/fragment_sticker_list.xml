<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/emptyContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSemiTransparentBackground" />

    <include
        android:id="@+id/mainContainerView"
        layout="@layout/layout_sticker_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_sticker_list_height_landscape"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/app_sticker_list_height_landscape"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior" />

</android.support.design.widget.CoordinatorLayout>