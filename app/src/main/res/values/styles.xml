<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="MainTheme.ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:minHeight">@dimen/size_medium</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="MainTheme.BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/size_small</item>
        <item name="android:textSize">@dimen/textsize_xsmall</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:minHeight">@dimen/size_medium</item>
        <item name="android:minWidth">@dimen/size_medium</item>
    </style>

    <style name="MainTheme.CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>